<?xml version="1.0"?>
<configuration debug="false" scan="true" scanPeriod="5 minutes">
	
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
		</encoder>
	</appender>
	
	<root level="DEBUG">
		<appender-ref ref="stdout"/>
	</root>
</configuration>